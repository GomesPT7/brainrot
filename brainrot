-- Services
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local GiveOutReward = ReplicatedStorage.Remotes.Roulette:WaitForChild("GiveOutReward")
local Bubble = ReplicatedStorage.Remotes:WaitForChild("Bubble")

-- Player GUI
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BrainrotJumpingGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Main Frame (with shadow effect)
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 280, 0, 240)
frame.Position = UDim2.new(0.5, -140, 0.3, 0) -- Centralizado horizontalmente
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

-- Shadow (simulado com m√∫ltiplos frames)
for i = 1, 3 do
    local shadow = Instance.new("Frame")
    shadow.ZIndex = 0
    shadow.BorderSizePixel = 0
    shadow.BackgroundTransparency = (0.7 - i * 0.1)
    shadow.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    shadow.Size = frame.Size + UDim2.new(0, i*2, 0, i*2)
    shadow.Position = frame.Position + UDim2.new(0, -i, 0, -i)
    shadow.Visible = true
    shadow.Parent = screenGui
end

-- Corner rounding
local frameCorner = Instance.new("UICorner")
frameCorner.CornerRadius = UDim.new(0, 16)
frameCorner.Parent = frame

-- Title bar
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
title.TextColor3 = Color3.fromRGB(220, 220, 255)
title.Text = "‚ö° Brainrot Jumping"
title.Font = Enum.Font.GothamSemibold
title.TextSize = 20
title.Parent = frame

local titleCorner = Instance.new("UICorner")
titleCorner.CornerRadius = UDim.new(0, 16)
titleCorner.Parent = title

-- Subtitle / Description (opcional)
local subtitle = Instance.new("TextLabel")
subtitle.Size = UDim2.new(1, -20, 0, 20)
subtitle.Position = UDim2.new(0, 10, 0, 48)
subtitle.BackgroundTransparency = 1
subtitle.TextColor3 = Color3.fromRGB(180, 180, 200)
subtitle.Text = "Boost your gameplay"
subtitle.Font = Enum.Font.Gotham
subtitle.TextSize = 14
subtitle.Parent = frame

-- Inf Money Button
local moneyBtn = Instance.new("TextButton")
moneyBtn.Size = UDim2.new(0.8, 0, 0, 40)
moneyBtn.Position = UDim2.new(0.1, 0, 0.35, 0)
moneyBtn.BackgroundColor3 = Color3.fromRGB(130, 100, 220)
moneyBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
moneyBtn.Text = "üí∞ Get Inf Money"
moneyBtn.Font = Enum.Font.GothamSemibold
moneyBtn.TextSize = 16
moneyBtn.Parent = frame

local moneyCorner = Instance.new("UICorner")
moneyCorner.CornerRadius = UDim.new(0, 12)
moneyCorner.Parent = moneyBtn

-- Hover effect for money button
moneyBtn.MouseEnter:Connect(function()
    moneyBtn.BackgroundColor3 = Color3.fromRGB(150, 120, 240)
end)
moneyBtn.MouseLeave:Connect(function()
    moneyBtn.BackgroundColor3 = Color3.fromRGB(130, 100, 220)
end)

-- Auto Pump Toggle Button
local pumpBtn = Instance.new("TextButton")
pumpBtn.Size = UDim2.new(0.8, 0, 0, 40)
pumpBtn.Position = UDim2.new(0.1, 0, 0.65, 0)
pumpBtn.BackgroundColor3 = Color3.fromRGB(100, 180, 100)
pumpBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
pumpBtn.Text = "üîÅ Auto Pump: OFF"
pumpBtn.Font = Enum.Font.GothamSemibold
pumpBtn.TextSize = 16
pumpBtn.Parent = frame

local pumpCorner = Instance.new("UICorner")
pumpCorner.CornerRadius = UDim.new(0, 12)
pumpCorner.Parent = pumpBtn

-- Hover effect for pump button
pumpBtn.MouseEnter:Connect(function()
    if pumpBtn.Text:find("OFF") then
        pumpBtn.BackgroundColor3 = Color3.fromRGB(120, 200, 120)
    else
        pumpBtn.BackgroundColor3 = Color3.fromRGB(240, 120, 120)
    end
end)
pumpBtn.MouseLeave:Connect(function()
    if pumpBtn.Text:find("OFF") then
        pumpBtn.BackgroundColor3 = Color3.fromRGB(100, 180, 100)
    else
        pumpBtn.BackgroundColor3 = Color3.fromRGB(220, 90, 90)
    end
end)

-- Footer
local footer = Instance.new("TextLabel")
footer.Size = UDim2.new(1, 0, 0, 20)
footer.Position = UDim2.new(0, 0, 1, -20)
footer.BackgroundTransparency = 1
footer.TextColor3 = Color3.fromRGB(150, 150, 170)
footer.Text = "by Cyifog"
footer.Font = Enum.Font.Gotham
footer.TextSize = 12
footer.Parent = frame

-- Logic
local pumpToggle = false

-- Inf Money button click
moneyBtn.MouseButton1Click:Connect(function()
    GiveOutReward:FireServer({
        value = 9e+18,
        type = "Money",
        chance = 0.3
    })
    -- Feedback visual opcional (ex: pop-up ou som)
end)

-- Auto Pump toggle logic
pumpBtn.MouseButton1Click:Connect(function()
    pumpToggle = not pumpToggle
    if pumpToggle then
        pumpBtn.Text = "üîÅ Auto Pump: ON"
        pumpBtn.BackgroundColor3 = Color3.fromRGB(220, 90, 90)
    else
        pumpBtn.Text = "üîÅ Auto Pump: OFF"
        pumpBtn.BackgroundColor3 = Color3.fromRGB(100, 180, 100)
    end
end)

-- Loop for auto pump
task.spawn(function()
    while true do
        if pumpToggle then
            Bubble:FireServer()
        end
        task.wait(0.05) -- pump speed
    end
end)
